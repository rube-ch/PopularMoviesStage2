<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.popularmovies.MovieDetailsFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="#009688"
        android:text="@string/movie_title"
        android:gravity="center_vertical"
        android:textSize="44sp"
        android:textColor="#FFFFFF"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/detail_poster"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/material_blue_grey_800"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin" />

        <LinearLayout
            android:id="@+id/detail_data"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/detail_release_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1944"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/detail_runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="144min"
                android:textSize="@dimen/abc_text_size_subhead_material"
                android:textStyle="italic"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
            <TextView
                android:id="@+id/detail_vote_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.8/10"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingBottom="12dp"/>
            <Button
                android:layout_width="66dp"
                android:layout_height="44dp"
                android:text="@string/favorite_button"
                android:textAllCaps="true"
                android:textSize="10sp"
                android:background="#B2DFD6"/>
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/detail_plot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Movie Plot"
        android:layout_below="@id/detail_poster"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"
        android:layout_below="@id/detail_plot"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>


</LinearLayout>
