<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rubech.udacity.popularmovies" >

    <!-- This permission is necessary in order for Sunshine to perform network access. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rubech.udacity.popularmovies.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rubech.udacity.popularmovies.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.rubech.udacity.popularmovies.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rubech.udacity.popularmovies.MainActivity" />
        </activity>
        <activity
            android:name="com.rubech.udacity.popularmovies.MovieDetails"
            android:label="@string/title_activity_movie_details"
            android:parentActivityName="com.rubech.udacity.popularmovies.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rubech.udacity.popularmovies.MainActivity" />
        </activity>
    </application>

</manifest>
